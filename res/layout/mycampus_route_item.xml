<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp" 
    android:padding="5dp">
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tvMycampusRouteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@color/violet"
        android:textSize="18sp" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tvMycampusRouteState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMycampusRouteName"
        android:textColor="@color/royalblue"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvMycampusRouteEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvMycampusRouteName"
        android:textColor="@color/royalblue"
        android:layout_marginRight="5dp"
        android:textSize="12sp" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tvMycampusRouteContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMycampusRouteState"
        android:textColor="@color/royalblue"
        android:textSize="14sp" />

</RelativeLayout>
