<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="课程"
            android:textColor="@color/violet" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/description"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/library_divder" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成绩"
            android:textColor="@color/violet" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvLibraryF01"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="#aacf53"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="2013-2014学年（两学期）"
            android:textColor="@color/violet"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/tvLibraryF02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLibraryF01"
            android:layout_marginLeft="10dp"
            android:text="概率论与数理统计A（必修）"
            android:textColor="@color/royalblue"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvLibraryF01"
            android:layout_marginRight="10dp"
            android:text="86分"
            android:textColor="@color/violet"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/tvLibraryF03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLibraryF02"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="任课老师：李云红"
            android:textColor="@color/royalblue"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLibraryF03"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="考试时间：2014-06-05"
            android:textColor="@color/royalblue"
            android:textSize="16sp" >
        </TextView>
    </RelativeLayout>

</LinearLayout>