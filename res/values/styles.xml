<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 菜单listview定义 -->
    <style name="StyleListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@drawable/divider</item>
    </style>
    
    <!-- listviewItem的样式定义 -->
    <style name="StyleListViewItem">
        <item name="android:textColor">#00B2EE</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="tab_rb_style">
        <item name="android:layout_width" >0dp</item>
        <item name="android:layout_height" >50dp</item>
        <item name="android:layout_weight" >1</item>
        <item name="android:button" >@null</item>
        <item name="android:textColor" >@color/library_tab_selector</item>
        <item name="android:textSize" >16sp</item>
        <item name="android:gravity" >center_horizontal|center_vertical</item>
        <item name="android:layout_gravity" >bottom</item>
        <item name="android:background" >@drawable/library_tab_bg</item>
    </style>
    
    <!-- 自定义主题 -->
    <style 
        name="Theme.Splash"
        parent="android:Theme">
        <!-- 将图层资源作为背景图像 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
